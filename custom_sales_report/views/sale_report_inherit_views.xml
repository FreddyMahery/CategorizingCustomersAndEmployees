<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste personnalisée -->
    <record id="view_custom_sale_report_tree" model="ir.ui.view">
        <field name="name">custom.sale.report.tree</field>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" string="Client"/>
                <field name="customer_purchases" string="Produits achetés" widget="text"/>
                <field name="customer_purchase_quantity" string="Quantité totale" widget="text"/>
            </tree>
        </field>
    </record>

    <!-- Action pour afficher la vue -->
    <record id="action_custom_sale_report" model="ir.actions.act_window">
        <field name="name">Rapport des ventes personnalisées</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <!-- <field name="context">{'group_by': ['partner_id']}</field>  -->
    </record>

    <!-- Ajouter un menu dans le module Custom Sales -->
    <menuitem id="menu_custom_sale_root" name="Custom sale" />

    <menuitem id="menu_custom_sale_report"
              name="Rapport des ventes"
              parent="menu_custom_sale_root"
              action="action_custom_sale_report"/>
</odoo>
