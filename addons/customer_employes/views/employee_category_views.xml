<?xml version='1.0' encoding='utf-8'?>
<odoo>
<!-- ACTION -->
     <record id="action_employee_category" model="ir.actions.act_window">
    <field name="name">Employee Categories</field>
    <field name="res_model">employee.category</field>
    <field name="view_mode">tree,form</field>
</record>
<!-- VUE RECHERCHE -->


   <!-- VUE FORM -->
 <record id="employee_category_view_form" model="ir.ui.view">
        <field name="name">employee_category.view.form</field>
        <field name="model">employee.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

  <!-- VUE TREE -->
<record id="employee_category_view_tree" model="ir.ui.view">
        <field name="name">employee_category.view.tree</field>
        <field name="model">employee.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

<!-- MENU -->
       <menuitem id="employee_category_menu" name="Category employe" parent="client_employes_category_root_menu"  action="action_employee_category" sequence="2" />
         
      
</odoo>