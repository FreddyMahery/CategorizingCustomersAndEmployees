    <!-- vue en tree -->
    <record id="view_estate_property_custom_list" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state in ('offer_received', 'offer_accepted')"
             decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'">
                <field name="name"/>  <!-- Nom de la propriété -->
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price" />  <!-- Prix attendu -->
                <field name="selling_price"/>  <!-- Prix de vente -->
                <field name="date_availability" optional="hide"/>  <!-- Date de disponibilité -->
                <field name="state"/>
                <!-- <field name="state" invisible="1"/> -->

            </tree>
        </field>
    </record>

    <!-- vue de formulaire  -->
    <record id="view_estate_property_form_custom" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_sold" type="object" string="Sold"/>
                    <button name="action_cancel" type="object" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div style="width: 100%;">
                        <h1>
                            <field name="name" nolabel="1" style="width: 100%;"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                        
                    <!-- Première section avec deux groupes côte à côte -->
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="best_price" string="Best Offer" />
                            <field name="selling_price" string="Selling Price"/>
                        </group>
                    </group>

                    <!-- Utilisation du notebook pour les détails supplémentaires -->
                    <notebook>
                        <page string="Description">
                            <field name="description" string="Description"/>
                        </page>
                        <page string="Features">
                            <group>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" invisible="garden == False"/>
                                <field name="garden_orientation" invisible="garden == False"/>
                                <field name="active" string="Active"/>
                                <!-- <field name="property_type_id" widget="many2one" string="Property Type"/> -->
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ['offer_accepted','sold','canceled']"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!-- vue de Recherhe  -->
   <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <!-- Barre de recherche rapide -->
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <!-- Filtres -->
                <filter name="available" string="Available" domain="[('state', 'in', ['new', 'offer_received'])]"/>

                <!-- Groupement -->
                <group expand="1" string="Group By">
                    <field name="postcode" string="Postcode"/>
                </group>
            </search>
        </field>
    </record>
    
 <!-- Définition d'une action pour le modèle estate.property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property
            </p>
        </field>
    </record>

    <!-- vue kanban -->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <!-- Titre de la propriété -->
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            
                            <!-- Prix attendu -->
                            <div>
                                <span>Expected Price:</span>
                                <field name="expected_price"/>
                            </div>
                            
                            <!-- Meilleur prix (affiché uniquement lorsqu'une offre est reçue) -->
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <span>Best Offer:</span>
                                <field name="best_price"/>
                            </div>
                            
                            <!-- Prix de vente (affiché uniquement lorsqu'une offre est acceptée) -->
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                <span>Selling Price:</span>
                                <field name="selling_price"/>
                            </div>
                            
                            <!-- Étiquettes -->
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



